{
  "name": "tortue",
  "version": "1.0.12",
  "description": "Website development made easy",
  "main": "dist/index.js",
  "types": "dist/types/src/index.d.ts",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "build:cli": "zx build-cli.mjs",
    "test": "jest --collect-coverage",
    "lint": "prettier --write \"src/**/*.ts\"",
    "lint:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "count-code": "cloc src/*.ts src/**/*.ts src/**/**/*.ts src/**/**/**/*.ts",
    "count-tests": "cloc tests/*.ts tests/**/*.ts tests/**/**/*.ts tests/**/**/**/*.ts"
  },
  "author": "Vukoman Stojanovic",
  "repository": {
    "type": "git",
    "url": "https://github.com/the-art-of-dev/tortue-js.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/clean-css": "^4.2.5",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/jsdom": "^16.2.14",
    "@types/live-server": "^1.2.1",
    "@types/mustache": "^4.1.2",
    "@types/node": "^17.0.21",
    "cloc": "^2.9.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "rollup": "^2.70.0",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2",
    "zx": "^6.0.7"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "clean-css": "^5.3.0",
    "commander": "^9.1.0",
    "fs-extra": "^10.0.1",
    "jsdom": "^19.0.0",
    "live-server": "^1.2.1",
    "mustache": "^4.2.0",
    "simple-git": "^3.5.0",
    "terser": "^5.12.1"
  },
  "bin": "./bin/app.js"
}
